#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif

#include <cr_section_macros.h>


// TODO: insert other include files here
#include "Lcd.h"
#include "Scheduler.h"
#include "DigInp.h"
#include "DigOut.h"
#include "Keyboard.h"
#include "defines.h"


// TODO: insert other definitions and declarations here


void App(void)
{
	int8_t key;

	key = Keyboard_GetKey();

	if(key!= NO_KEY)
	{
		Lcd_putchar('a');
	}


}

void MaqEstSensores()
{
	if(Last_State[BATTERY_SENSOR]==TRUE)
	{
		if(DigInp_GetInputState(BATTERY_SENSOR)==TRUE)
		{
			DigOut_SetState(BATTERY_SENSOR, !0);
		}
		else
		{
			DigOut_SetState(BATTERY_SENSOR, 0);
		}
	}

	if(Last_State[TEMP_SENSOR]==TRUE)
	{
		if(DigInp_GetInputState(TEMP_SENSOR)==TRUE)
		{
			DigOut_SetState(TEMP_SENSOR, !0);
		}
		else
		{
			DigOut_SetState(TEMP_SENSOR, 0);
		}
	}

	if(Last_State[OIL_PRESSURE_SENSOR]==TRUE)
	{
		if(DigInp_GetInputState(OIL_PRESSURE_SENSOR)==TRUE)
		{
			DigOut_SetState(OIL_PRESSURE_SENSOR, !0);
		}
		else
		{
			DigOut_SetState(OIL_PRESSURE_SENSOR, 0);
		}
	}


	}

	Last_State[BATTERY_SENSOR] = DigInp_GetInputState(BATTERY_SENSOR);
	Last_State[TEMP_SENSOR] = DigInp_GetInputState(TEMP_SENSOR);
	Last_State[OIL_PRESSURE_SENSOR] = DigInp_GetInputState(OIL_PRESSURE_SENSOR);

}

void LastState_Init(void)
{
	Last_State[BATTERY_SENSOR] = DigInp_GetInputState(BATTERY_SENSOR);
	Last_State[TEMP_SENSOR] = DigInp_GetInputState(TEMP_SENSOR);
	Last_State[OIL_PRESSURE_SENSOR] = DigInp_GetInputState(OIL_PRESSURE_SENSOR);
}

int main(void) {

	unsigned int Rpm;

	static bool Last_State[3];

	//INITS
	SystemInit();
	DigInp_Init();
	DigOut_Init();
	Scheduler_Init(1);
    Keyboard_Init(STANDARD_KEYBOARD);
    Heartbeat_Init();
    Lcd_Init();



    //AGREGAR TAREAS AL SCHEDULER
    Scheduler_AddTask(&MaqEstSensores, 1000);
//    Scheduler_AddTask(&Lcd_Update, 10);
//    Scheduler_AddTask(&App,1);
//    Scheduler_AddTask(&Heartbeat_Update, 1000);

    //Last_State Iniciali
    LastState_Init();
    //Rpm = RPM_Get();
    //
    Scheduler_Start();

	// TODO: insert code here

    // Force the counter to be placed into memory
    volatile static int i = 0 ;
    // Enter an infinite loop, just incrementing a counter
    while(1) {
    	Scheduler_Dispatcher();
        i++ ;
    }
    return 0 ;
}
